@model User

@{
    ViewBag.Title = "Реєстрація";
}

<div class="container">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <span class="panel-title">Будь ласка, заповніть форму для реєстрації</span>
                </div>
                <div class="panel-body">

                    @if (!string.IsNullOrEmpty(ViewBag.IsUser))
                    {
                            <div class="col-xs-12">
                                <h5 class="text-danger Indent">@ViewBag.IsUser</h5>
                            </div>
                    }
                    @using (@Html.BeginForm("Create", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="row">
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "Ім'я" })
                                        @Html.ValidationMessageFor(model => model.FirstName)
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Фамілія" })
                                        @Html.ValidationMessageFor(model => model.LastName)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Ваш Email" })
                                        @Html.ValidationMessageFor(model => model.Email)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Пароль" })
                                        @Html.ValidationMessageFor(model => model.Password)
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "Повторіть пароль" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-xs-12">
                                <div class="col-xs-12">
                                    <input type="submit" value="Зареєструватись" class="btn btn-info btn-block">
                                </div>
                            </div>
                        </div>

                        <hr />
                        <div class="row">
                            <div class="col-xs-12">
                                <h6>Вже зареєстровані? <a href="~/user/LogIn">Натисніть, щоб увійти</a></h6>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>