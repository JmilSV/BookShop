@model User

@{
    ViewBag.Title = "Вхід";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <span class="panel-title">Вхід у обліковий запис</span>
                </div>
                <div class="panel-body">
                    @if (!string.IsNullOrEmpty(ViewBag.NoUser))
                    {
                        <div class="row">
                            <div class="col-xs-12">
                                <h5 class="text-danger">@ViewBag.NoUser</h5>
                            </div>
                        </div>
                    }
                    @using (Html.BeginForm("LogIn", "User", FormMethod.Post))
                    {
                        string ReturnUrl = ViewBag.ReturnUrl;
                        @Html.Hidden("ReturnUrl", ReturnUrl)
                        <div class="row">
                            <div class="col-xs-12">
                                @Html.TextBoxFor(m => m.Email, new
                       {
                           @class = "form-control",
                           placeholder = "Введіть Ваш Email"
                       })
                            </div>
                        </div>
                        <br/>

                        <div class="row">
                            <div class="col-xs-12">
                                @Html.PasswordFor(m => m.Password, new
                       {
                           @class = "form-control",
                           placeholder = "Введіть Ваш пароль"
                       })
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-xs-12">
                                <input type="submit" value="Вхід" 
                                       class="btn btn-info btn-block"/>
                            </div>
                        </div>

                        <hr />
                        <div class="row">
                            <div class="col-xs-12">
                                <h6>Немаєте аккаунта? <a href="~/user/create">Зареєструйтесь тут</a></h6>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



