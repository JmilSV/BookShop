@model MyCart

@{
    ViewBag.Title = "Замовлення оформлене!";
    MyCart.GetCart().RemoveCart();
    Categories.category = null;
}

<div class="row">
    <div class="col-xs-12 text-center WhitesmokeLetters">
        <div class="gap50px"></div>
        <h2>Ваше замовлення успішно оформлене!</h2>
        <div class="gap15px"></div>
        @{
            List<string> lastNames = new List<string>();
            <span class="fontSize150">
                @for (int i = 0; i < Model.bookCartCount; i++)
                {
                    if (!lastNames.Exists(x => x == Model.BookCarts[i].book.Author.LastName))
                    {
                        if (lastNames.Count == 0)
                        {
                            lastNames.Add(Model.BookCarts[i].book.Author.LastName);
                            <span>@lastNames.Last()</span>
                        }
                        else
                        {
                            <span>, </span>
                            lastNames.Add(Model.BookCarts[i].book.Author.LastName);
                            <span>@lastNames.Last()</span>
                        }
                    }
                }
                <span>- чудовий вибір!</span><br />
            </span>
        }

        <h3>
            Чекаємо на Вас знову, приємного читання!
        </h3>
        <div class="col-xs-11 col-xs-offset-1 col-md-6 col-md-offset-3">
            <a href="~/home/index" class="btn btn-lg btn-block center-block btn-primary">Повернутись на головну</a>
        </div>
    </div>
</div>

