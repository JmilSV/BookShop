@model IEnumerable<webNew3.Models.Author>

@{
    ViewBag.Title = "Автори";
}



<div class="panel panel-default" >
    <div class="panel-heading">
        <span>Автори</span>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AuthorId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MiddleName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.AuthorId)
                    </td>
                    <td>
                        @Html.ActionLink(item.FirstName, "Details", new { id = item.AuthorId})
                    </td>
                    <td>
                        @Html.ActionLink(item.LastName, "Details", new { id = item.AuthorId })
                    </td>
                    <td>
                        @Html.ActionLink(string.IsNullOrEmpty(item.MiddleName) ?
                        "-" : item.MiddleName, "Details", new { id = item.AuthorId })
                    </td>
                    <td>
                        @if (item.InStock == true)
                        {
                            @Html.ActionLink("Видалити зі списку наявних", "RemoveFromStock",
                            new { id = item.AuthorId }, new { @class = "btn btn-default btn-block" })
                        }
                        else
                        {
                            @Html.ActionLink("Добавити до списку наявних", "AddToStock",
                            new { id = item.AuthorId }, new { @class = "btn btn-success btn-block" })
                        }
                    </td>
                </tr>
            }

        </table>
        <p>
            @Html.ActionLink("Добавити", "Create", null, new { @class = "btn btn-success" })
        </p>
    </div>
</div>
